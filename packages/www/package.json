  "license": "MIT",
  "devDependencies": {
    "@1password/asset-fingerprint": "^1.0.1",
    "concurrently": "^8.2.2",
    "tailwindcss": "^3.4.3"
  },
  "prettier": {
    "semi": false
  }
}
